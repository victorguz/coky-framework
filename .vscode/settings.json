{
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		// "src/vendor": false,
		"**/node_modules": true,
		"tasks/output": true
	},
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/**": true,
		"tasks/output": true
	},
	"html.format.wrapLineLength": 300,
	"phpfmt.indent_with_space": 4,
	"phpfmt.psr2": true,
	"editor.wordWrap": "on",
	"editor.multiCursorModifier": "ctrlCmd"
}
